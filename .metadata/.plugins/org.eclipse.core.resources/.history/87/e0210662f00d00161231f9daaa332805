package com.frankstar.Spring;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

public class TestUserBean {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//读取配置文件
		ApplicationContext context = new ClassPathXmlApplicationContext("UserBean.xml");
		//获取UserBean的实例
		PersonBean personBean = context.getBean("userBean", PersonBean.class);
		personBean.show();
		PersonBean personBean1 = context.getBean("userBean", PersonBean.class);
		personBean.show();
		PersonBean personBean2 = context.getBean("userBean", PersonBean.class);
		personBean.show();
		PersonBean personBean3 = context.getBean("userBean", PersonBean.class);
		personBean.show();
	}

}
