package com.frankstar.servlet.study;

import java.awt.Graphics2D;
import java.awt.image.BufferedImage;
import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 * Servlet implementation class DrawImage
 */
@WebServlet("/DrawImage")
public class DrawImage extends HttpServlet {
	private static final long serialVersionUID = 1L;
    public static final int WIDTH = 120;
    public static final int HEIGHT = 30;
    /**
     * @see HttpServlet#HttpServlet()
     */
    public DrawImage() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		response.getWriter().append("Served at: ").append(request.getContextPath());
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		String createTypeFlag = request.getParameter("createTpyeFlag");//接受客户端传递的createTypeFlag标识
		//内存中创建一张图片
		BufferedImage image = new BufferedImage(WIDTH, HEIGHT, BufferedImage.TYPE_INT_RGB);
		//得到图
		Graphics2D graphics2d = image.createGraphics();
		//设置背景图片
		setBackGround(graphics2d);
		//设置图片的边框
		setBorder(graphics2d);
		//图片上画干扰线
		drawRandomLine(graphics2d);
		//图片上的随机数
		String random = drawRandomNum(graphics2d, createTypeFlag);
		//将随机数存在session中
		request.getSession().setAttribute("checkcode", random);
		//设置相应头通知浏览器以图片的形式打开
		response.setContentType("image/jpeg");
		
		
	}

	private String drawRandomNum(Graphics2D graphics2d, String createTypeFlag) {
		// TODO Auto-generated method stub
		return null;
	}

	private void drawRandomLine(Graphics2D graphics2d) {
		// TODO Auto-generated method stub
		
	}

	private void setBorder(Graphics2D graphics2d) {
		// TODO Auto-generated method stub
		
	}

	private void setBackGround(Graphics2D graphics2d) {
		// TODO Auto-generated method stub
		
	}

}
